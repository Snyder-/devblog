<br>
<% provide(:title, "Home") %>
<h1>Learning Ruby & Rails</h1>
  <dl class="sub-nav label round secondary">
    <dt>Newest</dt>
      <% @articles.first(4).each do |article| %>
        <dd><%= link_to "#{article.title}", "##{article.title}" %></dd>
      <% end %>
  </dl>
  
  <% @articles.each do |article| %>
  <article class='article-panel'>
    <ul>
      <h2 class="article-title"><%= link_to "#{article.title}", article_path(article), id: "#{article.title}" %></h2>
      <p><strong>Sean Snyder</strong> | <%= full_post_date(article)%></p>
      <div class=""><%= markdown(article.body) %></div><br>
      <div><%= link_to "Leave a comment...", article_path(article, anchor: "disqus_thread"), class: "button round info" %></div>
    </ul>
    <hr>
  </article>
  <% end %>

  <p>
    <%= link_to "Create New Article", new_article_path, class: "button radius warning article-panel" %>
  </p>
