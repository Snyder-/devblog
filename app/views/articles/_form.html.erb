<% if @article.errors.any? %>
  <ul>
    <%= @article.errors.full_messages.each do |message| %>
        <li><%= message %></li>
    <% end %>
  </ul>
<% end %>
<%= form_for @article do |f| %>
  <div>
    <%= f.label :title %>
  </div>
  <div>
    <%= f.text_field :title %>
  </div>
  <div>
    <%= f.label :description %>
  </div>
  <div>
    <%= f.text_field :description %>
  </div>
  <div> 
    <%= f.cktext_area :body, rows: 10 %>
  </div>
  <br>
  <ul class="button-group round">  
    <li><%= f.submit class: "button round"%></li>
    <li><%= link_to "Cancel", articles_path, class: "button warning" %></li>
  </ul>
<% end %>