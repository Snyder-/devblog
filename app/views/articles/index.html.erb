<br>
<h1>Articles</h1>
  <dl class="sub-nav">
    <dt>Articles</dt>
      <% @articles.first(4).each do |article| %>
        <dd><%= link_to "#{article.title}", "##{article.title}" %></dd>
      <% end %>
  </dl>
  
  <% @articles.each do |article| %>
    <ul>
      <h4>
        <%= link_to "#{article.title}", article_path(article), id: "#{article.title}", style: "padding-top: 50px; margin-top: -40px;" %>
      </h4>
      <div class="panel"><%= markdown(article.body) %></div><br>
      <%= link_to "View", article_path(article, anchor: "disqus_thread") %>
    </ul>
    <hr>
  <% end %>

  <p>
    <%= link_to "New Article", new_article_path %>
  </p>
